rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Règles pour les images de produits
    match /products/{userId}/{fileName} {
      // Permettre lecture à tous (pour boutique en ligne future)
      allow read: if true;
      
      // Permettre écriture uniquement au propriétaire
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');  // Seulement images
      
      // Permettre suppression uniquement au propriétaire
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Par défaut, tout est interdit
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


